{
  "name": "slobs-client",
  "description": "Streamlabs streaming software",
  "author": "General Workings, Inc.",
  "version": "0.0.4",
  "main": "main.js",
  "scripts": {
    "compile": "webpack",
    "watch": "webpack --watch",
    "start": "electron .",
    "rebuild": "electron-rebuild",
    "update-node-obs": "cd ../node-obs/ && git pull && cmake-js clean && cmake-js build --runtime electron --runtime-version 1.6.1 && rm -rf ../slobs-client/node-obs/ && mv ./build/distribute/node-obs/ ../slobs-client/ && cd ../slobs-client",
    "package": "webpack && build -w --x64 --em.env=production",
    "deploy": "node bin/deploy.js"
  },
  "build": {
    "appId": "com.streamlabs.slobs",
    "productName": "Streamlabs OBS",
    "files": [
      "bundles",
      "node_modules",
      "vendor",
      "updater",
      "index.html",
      "main.js"
    ],
    "extraFiles": [
      "node-obs",
      "config"
    ],
    "asarUnpack": [
      "**/*.node"
    ],
    "publish": {
      "provider": "generic",
      "url": "https://s3-us-west-2.amazonaws.com/streamlabs-obs"
    }
  },
  "dependencies": {
    "electron-updater": "^1.14.0",
    "font-manager": "^0.2.2",
    "lodash": "^4.17.4"
  },
  "devDependencies": {
    "aws-sdk": "^2.43.0",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-stage-2": "^6.24.1",
    "css-loader": "^0.26.1",
    "electron": "^1.4.15",
    "electron-builder": "^15.6.2",
    "electron-devtools-installer": "^2.1.0",
    "electron-rebuild": "^1.5.7",
    "js-yaml": "^3.8.3",
    "less": "^2.7.2",
    "less-loader": "^2.2.3",
    "moment": "^2.17.1",
    "progress": "^2.0.0",
    "style-loader": "^0.13.1",
    "urijs": "^1.18.5",
    "vue": "^2.1.10",
    "vue-color": "^2.0.6",
    "vue-loader": "^10.2.0",
    "vue-multiselect": "2.0.0-beta.13",
    "vue-template-compiler": "^2.1.10",
    "vuedraggable": "^2.8.5",
    "vuex": "^2.1.1",
    "webpack": "^2.2.1"
  }
}
