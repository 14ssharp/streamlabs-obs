{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es7"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "isolatedModules": false,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "removeComments": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,

    "outDir": "bundles/ts",
    "allowJs": true,
    "strictNullChecks": false,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./app/**/*.ts"
  ]
}